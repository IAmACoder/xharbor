    <bean id="zkClient" class="org.apache.curator.framework.CuratorFrameworkFactory"
        factory-method="newClient"
        init-method="start">
        <constructor-arg value="${zk.address:121.41.45.51:2181}"/>
        <constructor-arg>
            <bean class="org.apache.curator.retry.ExponentialBackoffRetry">
                <constructor-arg value="1000"/>
                <constructor-arg value="3"/>
            </bean>
        </constructor-arg>
    </bean>
     
    <bean id="unitAgent" class="org.jocean.j2se.unit.UnitAgent"/>
    
    <bean id="unitUpdater" class="org.jocean.j2se.zk.ZKUpdater"
        init-method="start" destroy-method="stop">
        <constructor-arg ref="eventEngine"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.rules.path:/demo}/units"/>
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.UnitOperator">
                <constructor-arg ref="unitAgent"/>
            </bean>
        </constructor-arg>
    </bean>
 
    <bean id="directMemory" class="org.jocean.xharbor.util.DirectMemoryIndicator"/>
    
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:name=directMemory"   value-ref="directMemory"/>
                <entry key="org.jocean:name=bytesPool"      value-ref="bytesPool"/>
                <entry key="org.jocean:name=httpClientPool" value-ref="httpClientPool"/>
                <entry key="org.jocean:name=serviceMemo"    value-ref="serviceMemo"/>
                <entry key="org.jocean:name=noRouting"      value-ref="noRoutingMemo"/>
                <entry key="org.jocean:type=router,name=stats" value-ref="statsRegister"/>
                <entry key="org.jocean:name=unitAgent"      value-ref="unitAgent"/>
            </map>
        </property>
    </bean>
     
</beans>
