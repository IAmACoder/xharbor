    <bean id="aupUpdaterRules" class="org.jocean.j2se.spring.BeanProxy">
        <constructor-arg value="org.jocean.idiom.Visitor"/>
    </bean>
    
    <bean id="aupUpdater" class="org.jocean.xharbor.util.ZKUpdater">
        <constructor-arg ref="source"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.rules.path:/demo}/aups"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.transform.AUPOperator">
                <constructor-arg ref="aupUpdaterRules"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="routerUpdaterRules" class="org.jocean.j2se.spring.BeanProxy">
        <constructor-arg value="org.jocean.idiom.Visitor"/>
    </bean>
    
    <bean id="routerUpdater" class="org.jocean.xharbor.util.ZKUpdater">
        <constructor-arg ref="source"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.rules.path:/demo}/routers"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.util.RouteRulesOperator">
                <constructor-arg ref="routerUpdaterRules"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="gatewayUpdater" class="org.jocean.xharbor.util.ZKUpdater">
        <constructor-arg ref="source"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.rules.path:/demo}/gateways"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.GatewayLifecycleOperator">
                <constructor-arg ref="relayAgent"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="jmxConnectorServer" 
        class="org.springframework.jmx.support.ConnectorServerFactoryBean"  >
        <property name="serviceUrl" value="service:jmx:jmxmp://0.0.0.0:${jmxmp.port:9876}" />
        <property name="threaded"   value="true" />
        <property name="daemon"     value="true" />
        <property name="objectName" value="org.jocean:type=agent,name0=jmxmp" />
    </bean>
     
    <bean id="htmlAdaptorServer" class="org.jocean.j2se.jdmk.comm.HtmlAdaptorServer" 
        init-method="start" destroy-method="stop">
        <property name="port" value="${jmxhtml.port:8082}"/>
    </bean>

    <bean id="directMemory" class="org.jocean.xharbor.util.DirectMemoryIndicator"/>
    
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:name=directMemory"   value-ref="directMemory"/>
                <entry key="org.jocean:name=bytesPool"      value-ref="bytesPool"/>
                <entry key="org.jocean:name=httpClientPool" value-ref="httpClientPool"/>
                <entry key="org.jocean:name=serviceMemo"    value-ref="serviceMemo"/>
                <entry key="org.jocean:name=noRouting"      value-ref="noRoutingMemo"/>
                <entry key="org.jocean:name=htmladapter,port=${jmxhtml.port:8082}" value-ref="htmlAdaptorServer"/>
            </map>
        </property>
    </bean>
     
</beans>
