    <bean id="jmxConnectorServer" 
        class="org.springframework.jmx.support.ConnectorServerFactoryBean"  >
        <property name="serviceUrl" value="service:jmx:jmxmp://0.0.0.0:${jmxmp.port:9876}" />
        <property name="threaded"   value="true" />
        <property name="daemon"     value="true" />
        <property name="objectName" value="org.jocean:type=agent,name0=jmxmp" />
    </bean>
     
    <bean id="htmlAdaptorServer" class="com.sun.jdmk.comm.HtmlAdaptorServer" 
        init-method="start" destroy-method="stop"/>

    <bean id="directMemory" class="org.jocean.xharbor.util.DirectMemoryIndicator"/>
    
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:name=directMemory"   value-ref="directMemory"/>
                <entry key="org.jocean:name=bytesPool"      value-ref="bytesPool"/>
                <entry key="org.jocean:name=httpClientPool" value-ref="httpClientPool"/>
                <entry key="org.jocean:name=serviceMemo"   value-ref="serviceMemo"/>
                <entry key="org.jocean:name=noRouting"   value-ref="noRoutingMemo"/>
                <entry key="org.jocean:name=htmladapter,port=8082" value-ref="htmlAdaptorServer"/>
            </map>
        </property>
    </bean>
     
</beans>
