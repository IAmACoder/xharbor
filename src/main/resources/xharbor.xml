<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:${conf:xharbor}.properties</value>
            </list>
        </property>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>
    
    <bean id="httpTransportLogStatus" class="org.jocean.httpclient.impl.HttpUtils"
        factory-method="enableHttpTransportLog">
        <constructor-arg value="${gateway.outbound.httpTransportLogEnabled:true}"/>
    </bean>
    
    <bean id="source" class="org.jocean.event.extend.Runners"
        factory-method="build">
        <constructor-arg>
            <bean class="org.jocean.event.extend.Runners.Config">
                <constructor-arg value="org.jocean:type=xharbor"/>
                <constructor-arg value="xharbor"/>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateTimerService">
                        <constructor-arg value="xharbor"/>
                    </bean>
                </constructor-arg>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateFlowBasedExecutorSource">
                        <constructor-arg value="xharbor"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="bytesPool" class="org.jocean.idiom.pool.Pools" 
        factory-method="createCachedBytesPool">
        <constructor-arg value="${pool.bytes.blockSize:10240}"/>
    </bean>
 
    <bean id="httpClientPool" class="org.jocean.httpclient.impl.HttpClientPool">
        <constructor-arg ref="source"/>
        <constructor-arg>
            <bean class="org.jocean.netty.NettyClient">
                <constructor-arg value="${gateway.connector.processThreadNumber:4}"/>
            </bean>
        </constructor-arg>
        <constructor-arg value="${gateway.connector.maxConnection:1000}"/>
    </bean>
    
    <bean id="genObjname" class="org.jocean.j2se.spring.BeanProxy">
        <constructor-arg value="org.jocean.idiom.Function"/>
    </bean>
    
    <bean id="cachedRouter" class="org.jocean.xharbor.route.RouteUtils" 
        factory-method="buildCachedRouter">
        <constructor-arg value="${router.objname:org.jocean:type=router}"/>
        <constructor-arg ref="source"/>
        <constructor-arg ref="genObjname"/>
    </bean>
    
    <bean id="router" class="org.jocean.xharbor.route.RouteUtils" 
        factory-method="compositeRouter">
        <constructor-arg value="org.jocean.xharbor.api.Dispatcher"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.route.Request2RoutingInfo"/>
        </constructor-arg>
        <constructor-arg>
            <array>
                <ref bean="cachedRouter"/>
            </array>
        </constructor-arg>
    </bean>
    
    <bean id="timer" class="io.netty.util.HashedWheelTimer" />

    <bean id="memoBuilder" class="org.jocean.xharbor.api.RelayMemo.Utils" 
        factory-method="compositeBuilder">
        <constructor-arg>
            <array>
                <bean class="org.jocean.xharbor.util.RelayMemoBuilderForStats"/>
                <bean class="org.jocean.xharbor.util.RelayMemoBuilderForDispatchFeedback">
                    <constructor-arg ref="timer"/>
                </bean>
            </array>
        </constructor-arg>
    </bean>
    
    <bean id="serviceMemo" class="org.jocean.xharbor.util.ServiceMemoImpl"/>
    
    <bean id="noRoutingMemo" class="org.jocean.xharbor.util.RoutingInfoMemoImpl"/>
   
    <bean id="transformBuilder" class="org.jocean.j2se.spring.BeanProxy">
        <constructor-arg value="org.jocean.xharbor.spi.HttpRequestTransformer.Builder"/>
    </bean>
    
    <bean id="relayFlow" class="org.jocean.xharbor.relay.RelayFlow" 
        scope="prototype">
        <constructor-arg ref="router" />
        <constructor-arg ref="memoBuilder" />
        <constructor-arg ref="serviceMemo" />
        <constructor-arg ref="noRoutingMemo" />
        <constructor-arg ref="httpClientPool" />
        <constructor-arg value="${relay.checkResponseStatus:true}"/>
        <constructor-arg value="${relay.showInfoLog:true}"/>
        <constructor-arg ref="transformBuilder"/>
    </bean>
    
    <bean id="relayAgent" class="org.jocean.xharbor.relay.RelayAgentImpl">
        <constructor-arg ref="source" />
        <lookup-method name="createRelayFlow" bean="relayFlow"/>
    </bean>
    
