<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="compositeBuilder" class="org.jocean.xharbor.util.CompositeHRTBuilder"/>
    
    <bean id="defaultRouter" class="org.jocean.xharbor.route.DefaultRouter">
	    <constructor-arg ref="serviceMemo"/>
	    <constructor-arg ref="compositeBuilder"/>
    </bean>
    
    <bean id="cachedRouter" class="org.jocean.xharbor.route.CachedRouter" 
        destroy-method="destroy">
        <constructor-arg ref="eventEngine"/>
        <property name="impl" ref="defaultRouter"/>
    </bean>
    
    <bean class="org.jocean.xharbor.route.CahcedRouterMBeanSetter" >
        <constructor-arg ref="cachedRouter"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.route.RouteObjectNameMaker" />
        </constructor-arg>
    </bean>
        
    <bean id="router" class="org.jocean.xharbor.route.RouteUtils" 
        factory-method="compositeRouter">
        <constructor-arg value="org.jocean.xharbor.api.Dispatcher"/>
        <constructor-arg>
            <bean class="org.jocean.xharbor.route.Request2RoutingInfo"/>
        </constructor-arg>
        <constructor-arg>
            <array>
                <ref bean="cachedRouter"/>
            </array>
        </constructor-arg>
    </bean>     
    
    <bean id="tradeSubscription" 
        factory-bean="agentServer" 
        factory-method="subscribe"
        destroy-method="unsubscribe">
        <constructor-arg>
            <bean class="org.jocean.xharbor.relay.RelaySubscriber">
		        <constructor-arg ref="router" />
		        <constructor-arg ref="memoBuilder" />
		        <constructor-arg ref="noRoutingMemo" />
		        <constructor-arg ref="httpClient" />
            </bean>
        </constructor-arg>
    </bean>
     
</beans>
