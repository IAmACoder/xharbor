<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="httpServer" class="org.jocean.httpserver.HttpServer"
        init-method="start" destroy-method="stop">
        <property name="serverAgent" ref="serverAgent"/>
        <property name="acceptPort" value="${http.port:8080}" />
        <property name="acceptIp" value="${http.ip:0.0.0.0}" />
        <property name="logByteStream" value="${http.isLogByteStream:true}"/>
        <property name="idleTimeSeconds" value="${http.idleTimeSeconds:200}"/>
        <property name="compressContent" value="${http.isCompressContent:true}"/>
        <property name="enableSSL" value="${http.isEnableSSL:false}"/>
    </bean>
    
</beans>
